<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/fragment_ChooseCity_eldarly_editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint=""/>
    <androidx.cardview.widget.CardView
        android:id="@+id/Card_Instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#5DB075"
        app:cardCornerRadius="35dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_ChooseCity_eldarly_editText">
    <TextView
        android:id="@+id/fragment_ChooseCity_eldarly_Text"
        android:layout_width="wrap_content"

        android:gravity="center"

        android:layout_height="wrap_content"
        android:text="Click on text field above and write name of city which weather you want to know"
        android:textSize="25dp"
        android:textColor="@color/white"
         />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/fragment_ChooseCity_eldarly_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Check weather in the choosen city"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/Card_Instruction"
        app:layout_constraintBottom_toTopOf="@id/fragment_ChooseCity_eldarly_button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/fragment_ChooseCity_eldarly_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Go back"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>